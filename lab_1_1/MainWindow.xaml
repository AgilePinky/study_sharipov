<Window x:Class="lab_1_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="lab_1_1" Height="200" Width="462">
    <Grid>
        <StackPanel  Grid.Column="0" Margin="10">
            <!-- Текстовое поле для ввода -->
            <TextBox x:Name="InputTextBox" Width="147" Padding="0,0,0,10" Margin="0,0,0,10" HorizontalAlignment="Left" />
            <Button Content="Добавить" Width="100" Click="AddButton_Click" HorizontalAlignment="Left"/>

            <!-- Кнопка для добавления текста -->


        </StackPanel>
        <StackPanel  Grid.Column="1" Margin="10">
            <ListBox x:Name="TextListBox" Height="141" Padding="100,10,10,10" Width="214" UseLayoutRounding="False" HorizontalAlignment="Right"  />

            <!-- Текстовый список для отображения добавленного текста -->

        </StackPanel>

    </Grid>

</Window>
    
