<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Чат-клиент" Height="500" Width="800">
    <Grid>
        <TextBox x:Name="MessagesList" Height="250" Margin="10,10,10,0" VerticalAlignment="Top" IsReadOnly="True" AcceptsReturn="True"/>
        <TextBox x:Name="RecipientBox" Height="25" Margin="10,270,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="MessageBox" Height="100" Margin="10,300,10,0" VerticalAlignment="Top" AcceptsReturn="True"/>
        <Button Content="Отправить" Margin="10,410,10,0" VerticalAlignment="Top" Click="SendButton_Click"/>
    </Grid>
</Window>